<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:layout_marginLeft="8dp"
        android:id="@+id/lay4"
        android:layout_marginRight="8dp"
        android:orientation="horizontal"
        android:weightSum="1"
        android:divider="?android:listDivider"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:layout_weight="1">

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:paddingTop="6dp"
                android:id="@+id/i_podcast"
                android:src="@mipmap/ic_launcher_round"
                />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:weightSum="2">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:weightSum="1">

            <ImageView
                android:id="@+id/i_quantum"
                android:layout_width="40dp"
                android:layout_height="70dp"
                android:layout_gravity="top"
                android:layout_weight="0.50"
                android:src="@mipmap/ic_launcher_round" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="1">
            <TextView android:id="@+id/groupnam"
                android:paddingLeft="50px"
                android:textSize="16px"
                android:layout_weight="0.67"
                android:textColor="#000000"
                android:textStyle="normal"
                android:layout_width="0dp"
                android:layout_height="50px"/>

            <ImageView
                android:id="@+id/i_comunity"
                android:layout_width="40dp"
                android:layout_height="70dp"
                android:layout_gravity="top"
                android:layout_marginRight="6dp"
                android:layout_weight="0.44"
                android:src="@mipmap/ic_launcher_round" />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:weightSum="1">

            <ImageView
                android:layout_weight="0.50"
                android:layout_width="40dp"
                android:layout_height="70dp"
                android:layout_gravity="top"
                android:layout_marginTop="5dp"
                android:id="@+id/i_freehealing"
                android:src="@mipmap/ic_launcher_round"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="1">
            <TextView android:id="@+id/groupname"
                android:paddingLeft="50px"
                android:textSize="16px"
                android:layout_weight="0.67"
                android:textColor="#000000"
                android:textStyle="normal"
                android:layout_width="0dp"
                android:layout_height="50px"/>

            <ImageView
                android:id="@+id/i_more"
                android:layout_width="40dp"
                android:layout_height="70dp"
                android:layout_gravity="top"
                android:layout_marginRight="6dp"
                android:layout_marginTop="5dp"
                android:layout_weight="0.44"
                android:src="@mipmap/ic_launcher_round" />

        </LinearLayout>

    </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:layout_marginLeft="8dp"
        android:id="@+id/lay3"
        android:layout_marginRight="8dp"
        android:orientation="horizontal"
        android:weightSum="1"
        android:layout_marginBottom="15dp"
        android:divider="?android:listDivider"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_weight="1">

            <ImageView
                android:layout_weight="0.50"
                android:layout_width="40dp"
                android:layout_height="70dp"
                android:layout_gravity="top"
                android:layout_marginTop="5dp"
                android:id="@+id/i_home"
               android:src="@mipmap/ic_launcher_round"
                />
        </LinearLayout>
    </LinearLayout>
   </LinearLayout>